class Solution {
    public int arrayNesting(int[] nums) {
        boolean[] visited = new boolean[nums.length];
        int maxLength = 0;

        for (int i = 0; i < nums.length; i++) {

            if (visited[i]) {
                continue;
            }

            int current = i;
            int count = 0;

            while (!visited[current]) {
                visited[current] = true;
                current = nums[current];
                count++;
            }

            maxLength = Math.max(maxLength, count);
        }

        return maxLength;
    }
}
