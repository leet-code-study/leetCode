/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public int rob(TreeNode root) {
        return dfs(root, new HashMap<>());
    }

    private int dfs(TreeNode node, Map<TreeNode, Integer> memo) {
        if (node == null) return 0;
        if (memo.containsKey(node)) return memo.get(node);

        int robThis = node.val;
        if (node.left != null) {
            robThis += dfs(node.left.left, memo) + dfs(node.left.right, memo);
        }
        if (node.right != null) {
            robThis += dfs(node.right.left, memo) + dfs(node.right.right, memo);
        }

        int skipThis = dfs(node.left, memo) + dfs(node.right, memo);

        int result = Math.max(robThis, skipThis);
        memo.put(node, result);
        return result;
    }
}
